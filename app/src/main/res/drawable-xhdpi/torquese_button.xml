<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#4183D7" />
        <corners
            android:radius="3dp" />
        <stroke android:width="1dp" android:color="#4183D7"/>
    </shape>
</item>
<item android:state_checked="true" >
    <shape>
        <solid
            android:color="#4183D7" />
        <corners
            android:radius="3dp" />
        <stroke android:width="1dp" android:color="#4183D7"/>
    </shape>
</item>
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#99ddf7" />
            <corners
                android:radius="3dp" />
            <stroke android:width="1dp" android:color="#4183D7"/>
        </shape>
    </item>
<item>
    <shape>
        <solid
            android:color="#2d76a1" />
        <corners
            android:radius="3dp" />
        <stroke android:width="1dp" android:color="#4183D7"/>
    </shape>
   </item>
</selector>