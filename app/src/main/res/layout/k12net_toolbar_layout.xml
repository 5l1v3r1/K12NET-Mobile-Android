<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#2d76a1"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/lyt_back"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/torquese_button_flat"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/arrow_previous_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_home"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/lyt_back"
        android:background="@drawable/torquese_button_flat"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/home_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_next"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/lyt_back"
        android:background="@drawable/torquese_button_flat"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/arrow_next_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_refresh"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dashmenuIconSize"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/torquese_button_flat"
        android:gravity="center|start"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/reload" />
    </LinearLayout>

</RelativeLayout>